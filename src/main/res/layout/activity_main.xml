<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="191dp"
            android:layout_height="71dp"
            android:layout_marginTop="182dp"
            android:text=" Enter Distance in miles : "
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="117dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:layout_marginEnd="172dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>

    <EditText
            android:id="@+id/editTextMiles"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:layout_marginBottom="112dp" app:layout_constraintBottom_toTopOf="@+id/editTextKM"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="170dp" android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:text="Conversion in km: "
            android:layout_marginTop="117dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginEnd="175dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginBottom="99dp" app:layout_constraintBottom_toTopOf="@+id/buttonConvMileToKm"
            app:layout_constraintHorizontal_bias="0.093"/>
    <EditText
            android:id="@+id/editTextKM"
            android:layout_width="168dp"
            android:layout_height="67dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/editTextMiles"
            app:layout_constraintBottom_toTopOf="@+id/buttonConvMileToKm"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="200dp"
            android:layout_marginEnd="18dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="90dp"/>

    <Button
            android:id="@+id/buttonConvMileToKm"
            android:layout_width="316dp"
            android:layout_height="73dp"
            android:text="Convert Distance From Miles To Kilometers "
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="77dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>